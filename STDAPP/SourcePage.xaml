                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="79*"/>
                    <ColumnDefinition Width="92*"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="85*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="97*"/>
                </Grid.ColumnDefinitions>
